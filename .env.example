# 应用配置
APP_ENV=production
APP_TIMEZONE=Asia/Shanghai
APP_ENCRYPTION_KEY=REPLACE_WITH_BASE64_32BYTE_KEY

# 数据库配置
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=mcsm_authme
DB_USERNAME=mcsm_authme
DB_PASSWORD=super-secure-password

# 管理员面板认证
ADMIN_PANEL_TOKEN=change-me-admin-token

# MCSManager 配置
MCSM_BASE_URL=https://panel.example.com
MCSM_API_KEY=your-mcsm-api-key
MCSM_DEFAULT_DAEMON_ID=
MCSM_DEFAULT_INSTANCE_ID=
AUTHME_COMMAND_TEMPLATE=authme register {username} {password}
# 验证码配置
CAPTCHA_PROVIDER=off
CAPTCHA_TTL_SECONDS=180

# reCAPTCHA 配置（可选）
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# hCaptcha 配置（可选）
HCAPTCHA_SITE_KEY=
HCAPTCHA_SECRET_KEY=

# Cloudflare Turnstile 配置（可选）
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=
